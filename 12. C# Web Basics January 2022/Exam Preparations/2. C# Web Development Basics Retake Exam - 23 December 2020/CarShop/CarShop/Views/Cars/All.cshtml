<h1 class="text-center mt-2">My Cars</h1>
<div class="row mt-2 mb-4">
    {{foreach}}
    {
        <div class="card col-6 col-lg-3 game-card">
        <img src={{PictureUrl}}
             class="card-img-top img-fluid card-image rounded" data-toggle="tooltip"
             data-placement="bottom" title={{Model}}>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-center">Plate {{PlateNumber}}</li>
                <li class="list-group-item">
                    <span class="bg-danger col-sm">Remaining Issues: {{RemainingIssues}}</span>
                    <span class="bg-success col-sm">Fixed Issues: {{FixedIssues}}</span>
                </li>
            </ul>
            <a href="/Issues/CarIssues?carId={{Id}}" class="btn btn-block btn-primary">Check issues</a>
        </div>
    </div>
    }

</div>